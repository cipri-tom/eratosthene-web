{
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "script",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "rules": {
      "semi": "error",
      "no-multi-assign": "warn",
      "no-bitwise": "off",
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
      "max-len": ["error", 120]
    },
    "env" : {
      "browser": true,
      "es6": true
    }
}